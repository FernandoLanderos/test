<p id="notice"><%= notice %></p>

<h1>Galleta</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Tamaño</th>
      <th>Tipo</th>
      <th>Precio</th>
      <th>Peso</th>
      <th>Porciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @galleta.each do |galletum| %>
      <tr>
        <td><%= galletum.nombre %></td>
        <td><%= galletum.tamaño %></td>
        <td><%= galletum.tipo %></td>
        <td><%= galletum.precio %></td>
        <td><%= galletum.peso %></td>
        <td><%= galletum.porciones %></td>
        <td><%= link_to 'Show', galletum %></td>
        <td><%= link_to 'Edit', edit_galletum_path(galletum) %></td>
        <td><%= link_to 'Destroy', galletum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



